---
layout: none
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title-en | xml_escape }}</title>
    <description>{% if site.description %}{{ site.description | xml_escape }}{% endif %}</description>
  </channel>
  <link>{{ site.url }}/en</link>
  <atom:link href="{{ site.url }}/en/feed.xml" rel="self" type="application/rss+xml" />
  {% assign articles = site.posts | where:'language', 'english' %}
  {% for post in articles limit:10 %}
  <item>
    <title>{{ post.title | xml_escape }}</title>
    <description>{{ post.content | xml_escape }}</description>
    <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
    <category>{{ post.tags | join: ", " }}</category>
    <link>{{ site.url }}{{ post.url }}</link>
    <guid isPermaLink="true">{{ site.url }}{{ post.url }}</guid>
  </item>
  {% endfor %}
</rss>
